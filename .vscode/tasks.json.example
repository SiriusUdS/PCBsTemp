{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "./build.sh debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "./build.sh release",
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "./build.sh clean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Flash with st-flash",
            "type": "shell",
            "command": "st-flash write build/STM32_RocketEngine.bin 0x8000000",
            "group": "none",
            "dependsOn": ["Build Release"],
            "problemMatcher": []
        },
        {
            "label": "Flash with OpenOCD",
            "type": "shell",
            "command": "openocd -f interface/stlink.cfg -f target/stm32f4x.cfg -c 'program build/STM32_RocketEngine.elf verify reset exit'",
            "group": "none",
            "dependsOn": ["Build Release"],
            "problemMatcher": []
        }
    ]
}
